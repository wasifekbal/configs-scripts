# Reload functions
# super + Escape
# 	"$XDG_CONFIG_HOME"/sxhkd/functions

# Reload sxhkd config file
super + shift + r
  /usr/bin/pkill -USR1 -x sxhkd; /usr/bin/notify-send "sxhkd config reloaded";

# powermenu
alt + p
  /home/alpha/.config/rofi/scripts/powermenu.sh

# screenlock
super + x
  xdg-screensaver lock

# rofi drun
alt + d
  /usr/bin/rofi -show drun

# emoji
shift + alt + e
  /home/alpha/.config/rofi/scripts/emoji.sh

# alacritty
alt + Return
  /usr/bin/alacritty

# Ranger
alt + f
  /usr/bin/alacritty -e "/usr/bin/ranger"

# nmtui-window popup
super + shift + w
  /home/alpha/.local/bin/nmtui-window

##############
# Screenshot #
##############

# screenshot area
alt + @Print
  /home/alpha/.local/bin/screenshot

# screenshot active window
ctrl + @Print
  /home/alpha/.local/bin/screenshot window

# screenshot full
@Print
  /home/alpha/.local/bin/screenshot full

